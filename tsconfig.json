{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
		"removeComments": true,
		"resolveJsonModule": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true, 
		"experimentalDecorators": true,
		"esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
		"baseUrl": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}